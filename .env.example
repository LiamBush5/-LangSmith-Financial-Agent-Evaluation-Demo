# REQUIRED API KEYS
LANGSMITH_API_KEY=lsv2_pt_your_langsmith_api_key_here
LANGSMITH_PROJECT=financial-agent-dev

OPENAI_API_KEY=sk-your_openai_api_key_here

GOOGLE_API_KEY=your_google_api_key_here

# Primary LLM Provider (choose: openai or gemini)
LLM_PROVIDER=gemini

# Model Selection
# OpenAI Options: gpt-4, gpt-4-turbo, gpt-3.5-turbo, gpt-4.1-nano
# Gemini Options: gemini-2.0-flash, gemini-1.5-pro, gemini-1.5-flash

AGENT_MODEL=gemini-2.0-flash
EVALUATOR_MODEL=gemini-2.0-flash

# OPTIONAL SERVICES
# Tavily Search API (Optional - for real-time market research)
# Get API key from: https://tavily.com
# Note: Agent works without this, but market research queries will be limited
TAVILY_API_KEY=tvly-your_tavily_api_key_here

# EVALUATION CONFIGURATION
# Model Behavior
TEMPERATURE=0
# Evaluation Performance
MAX_CONCURRENCY=4                    # Parallel evaluation tasks (2-8 recommended)

# Agent Execution Limits
AGENT_MAX_ITERATIONS=20              # Maximum tool calls per query
AGENT_MAX_EXECUTION_TIME=300         # Timeout in seconds (5 minutes)

# Experiment Naming (automatically generated)
# Format: {AGENT_MODEL}-experiment-{timestamp}
# Example: gemini-2.0-flash-experiment-20250613-142530
